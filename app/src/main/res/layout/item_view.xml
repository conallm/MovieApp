<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    card_view:cardElevation="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    card_view:cardCornerRadius="3dp">

    <ImageView
        android:id="@+id/movie_cover"
        android:layout_width="132dp"
        android:layout_height="129dp"
        android:layout_weight="0.34"
        android:padding="2dp"
        android:src="@drawable/thecableguy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:text="The Cable Guy"
            android:textAlignment="center"
            android:layout_marginLeft="130dp"
            android:id="@+id/movie_name"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:text="Steven Kovacs needed his cable hooked up...
            The Cable Guy needed a friend...
            But is free cable worth all this?"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="130dp"
            android:textAlignment="textStart"
            android:id="@+id/movie_description"
            android:gravity="start" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="10dp"
            android:weightSum="1.0"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/year_released"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"

                android:layout_weight="0.33"
                android:text="Year" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="bottom"
                android:layout_weight="0.33"
                android:text="Rating:9" />


        </LinearLayout>




    </LinearLayout>



</androidx.cardview.widget.CardView>

